{% extends 'base.html.twig' %}

{% block body %}
    <div class="min-h-screen flex items-center justify-center bg-gray-100">
        <div class="w-full max-w-md bg-white p-8 rounded-lg shadow-md">
            <h1 class="text-2xl font-bold mb-6 text-center">Ministage - Connexion</h1>

            {{ form_start(form, {'attr': {'class': 'space-y-4'}}) }}
            {{ form_row(form.email, {
                'attr': {
                    'class': 'w-full px-3 py-2 border rounded-md focus:outline-none focus:ring-2 focus:ring-indigo-500'
                }
            }) }}
            {{ form_row(form.password, {
                'attr': {
                    'class': 'w-full px-3 py-2 border rounded-md focus:outline-none focus:ring-2 focus:ring-indigo-500'
                }
            }) }}
            {{ form_row(form.login, {
                'attr': {
                    'class': 'w-full py-2 bg-indigo-600 text-white font-semibold rounded-md hover:bg-indigo-700 transition-colors'
                }
            }) }}
            {{ form_end(form) }}

            {% for message in app.flashes('error') %}
                <div class="mt-4 text-red-600 text-sm text-center">{{ message }}</div>
            {% endfor %}
        </div>
    </div>
{% endblock %}
